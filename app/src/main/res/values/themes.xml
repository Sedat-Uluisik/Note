<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Note" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" >#EFEFEF</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>
    <style name="Theme.Note" parent="Base.Theme.Note" />

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#65D05B</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#D52A2A</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>