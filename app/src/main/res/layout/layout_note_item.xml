<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@drawable/note_item_back"
       android:padding="16dp"
       android:layout_marginStart="4dp"
       android:layout_marginEnd="4dp"
       android:layout_marginTop="4dp">

       <TextView
           android:id="@+id/note_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="start"
           tools:text="9sdfsdfsfsdsdfsfgkmhjkllşön64646464fsdf"
           android:textColor="@android:color/black"
           android:textSize="18sp"
           android:maxLength="100"
           app:layout_constraintEnd_toStartOf="@+id/icons"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/note_time_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="7dp"
           android:textColor="#4C4C4C"
           android:textSize="12sp"
           tools:text="--:--" />

   </LinearLayout>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_24"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/note_item_back"
            android:contentDescription="@string/more_button" />

        <ImageView
            android:id="@+id/hasSubNoteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sub_note_24"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:background="@drawable/note_item_back"
            android:contentDescription="@string/this_note_is_has_sub_note" />

        <ImageView
            android:id="@+id/hasImageFromNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:src="@drawable/ic_image_24"
            android:background="@drawable/note_item_back"
            android:contentDescription="@string/this_note_is_has_image" />

    </LinearLayout>

</LinearLayout>